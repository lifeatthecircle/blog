<section id="recent">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Recent Posts</h2>
                <h3 class="section-subheading text-muted"></h3>
            </div>
        </div>

        <% blog.articles[0...3].each_with_index do |post, i| %>
          <div class="row">
            <div class="col-lg-12">
              <%= partial(:post, :locals => { post: post }) %>
            </div>
          </div>
        <% end %>
    </div>
</section>
